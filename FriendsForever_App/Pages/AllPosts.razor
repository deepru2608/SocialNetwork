<style>
    .scrollOptions-Post {
        overflow: scroll;
        max-height: 500px;
    }
</style>


<SearchNewFriends />

<div class="card card-cascade narrower mt-3">
    <!-- Card content -->
    <div class="card-body card-body-cascade">
        <div class="d-flex">
            <div class="p-1">
                <img src="Images/ProfileImage/deepuProfile.jpg" alt="Avatar" class="text-left rounded-circle" style="width:50px; height: 50px;">
            </div>
            <div class="p-1 mt-2">
                <h4>Deepanshu Ruhela</h4>
            </div>
            <div class="ml-auto p-2">
                <span class="text-right">2 mins</span>
            </div>
        </div>
        <hr class="bg-secondary" />
        <div class="scrollOptions-Post" @onclick="showPhotosInModel">
            @for (int i = 0; i < 3; i++)
            {
                <img src="Images/ProfileImage/830c5f7c-1dfa-4dd8-b1e8-2bf9ed37308f_IMG_4680.jpg" style="width:100%" alt="Deepanshu" class="p-1">
            }
        </div>
        <hr class="bg-secondary" />
        <div class="d-flex">
            <div class="p-1">
                <span class="mr-auto" style="font-size:16px"><i class="far fa-thumbs-up" style="color:#4834DF"></i> 10</span>&nbsp;&nbsp;
            </div>
            <div class="p-1">
                <span class="ml-auto" style="font-size:16px"><i class="far fa-comment-alt" style="color:#4834DF"></i> 300</span>
            </div>
        </div>
        <div class="d-flex">
            <div class="p-1">
                <SfButton IsPrimary="true"><i class="fa fa-thumbs-up"></i>&nbsp;&nbsp;Like</SfButton>
            </div>
            <div class="p-1">
                <SfButton IsPrimary="true"><i class="fa fa-comment"></i>&nbsp;&nbsp;Comment</SfButton>
            </div>
        </div>
    </div>
</div>

<SfToast @ref="ToastObj" ID="toast_type">
    <ToastPosition X="Right"></ToastPosition>
</SfToast>

<!-- Modal: modalCart -->
<div class="modal fade" id="modalCart" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Your cart</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <!--Body-->
            <div class="modal-body">

                <!--Carousel Wrapper-->
                <div id="carousel-example-1z" class="carousel slide carousel-fade" data-ride="carousel">
                    <!--Indicators-->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-1z" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-1z" data-slide-to="1"></li>
                        <li data-target="#carousel-example-1z" data-slide-to="2"></li>
                    </ol>
                    <!--/.Indicators-->
                    <!--Slides-->
                    <div class="carousel-inner" role="listbox">
                        @{ bool checkFirstCarousal = true; }
                        @for (int i = 0; i < 5; i++)
                        {
                            if (checkFirstCarousal)
                            {
                                <!--First slide-->
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="Images/ProfileImage/830c5f7c-1dfa-4dd8-b1e8-2bf9ed37308f_IMG_4680.jpg"
                                         alt="First slide">
                                </div>
                                <!--/First slide-->

                                checkFirstCarousal = false;
                            }
                            else
                            {
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="https://mdbootstrap.com/img/Photos/Slides/img%20(129).jpg"
                                         alt="Second slide">
                                </div>
                            }
                        }


                        <!--Second slide-->
                        <!--/Second slide-->
                        <!--Third slide-->
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://mdbootstrap.com/img/Photos/Slides/img%20(70).jpg"
                                 alt="Third slide">
                        </div>
                        <!--/Third slide-->
                    </div>
                    <!--/.Slides-->
                    <!--Controls-->
                    <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                    <!--/.Controls-->
                </div>
                <!--/.Carousel Wrapper-->

            </div>
            <!--Footer-->
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>
                <button class="btn btn-primary">Checkout</button>
            </div>
        </div>
    </div>
</div>
